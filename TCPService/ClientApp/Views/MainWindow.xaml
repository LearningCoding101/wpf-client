<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Scuffed TCP Chat"
        Height="450"
        Width="800"
        Closing="HandleWindowClose"
        Background="#2C2F33">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Chat Messages List -->
        <ListBox Grid.Column="1"
                 HorizontalAlignment="Left"
                 Height="270"
                 Margin="124,47,0,0"
                 VerticalAlignment="Top"
                 Width="613"
                 Background="#202225"
                 Foreground="#B9BBBE"
                 BorderThickness="0"
                 ItemsSource="{Binding ChatHistory}" />
        <TextBox x:Name="MessageInput"
                 HorizontalAlignment="Left"
                 Height="35"
                 Margin="124,361,0,0"
                 VerticalAlignment="Top"
                 Width="503"
                 Grid.Column="1"
                 Background="#202225"
                 Foreground="#FFFFFF"
                 BorderBrush="#7289DA"
                 CaretBrush="#7289DA"
                 TextChanged="TextBox_TextChanged"
                 VerticalContentAlignment="Center" />
        <TextBlock x:Name="PlaceholderText"
                   Text="Type your message here..."
                   Foreground="#72767D"
                   HorizontalAlignment="Left"
                   Height="35"
                   Margin="142,366,0,0"
                   VerticalAlignment="Top"
                   Width="552"
                   Grid.Column="1"
                   IsHitTestVisible="False" />

        <!-- Message Input -->

        <!-- Placeholder Text -->

        <!-- Send Button -->
        <Button Content="Send"
                Name="SendMessageButton"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Height="35"
                Margin="659,361,0,0"
                VerticalAlignment="Top"
                Width="78"
                Background="#7289DA"
                Foreground="#FFFFFF"
                BorderThickness="0"
                FontWeight="Bold"
                Cursor="Hand"
                Click="SendMessage"
                IsEnabled="True" />

        <!-- Title Text -->
        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   Height="28"
                   Margin="247,10,0,0"
                   TextWrapping="Wrap"
                   Text="Scuffed TCP Chat"
                   VerticalAlignment="Top"
                   TextAlignment="Center"
                   Width="291"
                   FontSize="24"
                   Foreground="#FFFFFF"
                   FontWeight="Bold" />
        <TextBox Grid.ColumnSpan="2"
                 Name="UsernameInput"
                 HorizontalAlignment="Left"
                 Margin="10,81,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 Width="99"
                 Height="34" />
        <Label Content="Enter Name"
               Foreground="#FFFFFF"
               FontSize="18"
               Grid.ColumnSpan="2"
               Margin="10,42,681,360" />
        <Button Content="Connect !"
                Name="ConnectButton"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Height="35"
                Margin="10,137,0,0"
                VerticalAlignment="Top"
                Width="99"
                Click="ConnectServer" />
    </Grid>
</Window>

